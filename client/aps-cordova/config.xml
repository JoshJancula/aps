<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.aps-josh" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>APS</name>
    <description>
        Invoicing solutions for Atlantic Pinstriping
    </description>
    <author email="josh@jancula.com" href="http://cordova.io">
        Josh Jancula
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>To scan barcodes</string>
    </edit-config>
    <plugin name="cordova-plugin-bluetooth-serial" spec="^0.4.7" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^8.0.1">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <plugin name="uk.co.workingedge.phonegap.plugin.launchnavigator" spec="^4.2.2">
        <variable name="OKHTTP_VERSION" value="3.+" />
        <variable name="LOCATION_USAGE_DESCRIPTION" value="This app requires access to your location for navigation purposes" />
    </plugin>
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>To scan barcodes</string>
    </edit-config>
    <plugin name="cordova-plugin-ionic-keyboard" spec="^2.1.3" />
    <engine name="android" spec="^7.1.4" />
    <engine name="ios" spec="^4.5.5" />
     <preference name="keyboardDisplayRequiresUserAction" value="true" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
